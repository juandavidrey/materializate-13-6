
<div class="col-md-4 col-md-offset-4">
<div class="panel panel-default">
<div class="panel-heading"><h4 class="panel-title"><strong>Registrarse </strong></h4>
</div>

<div class="panel-body">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, "Correo electrónico" %><br />
    <!-- <%= f.email_field :email, autofocus: true %> -->
	<%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'usted@puede.com' %>
	<br /> 
  </div>
  
  <div class="field">
    <%= f.label :username, "Nombre de usuario" %><br />
    <%= f.text_field :username, autofocus: true, class: 'form-control', placeholder: 'fulanito' %>
	<br /> 
  </div>
  
  <div class="field">
    <%= f.label :name, "Nombre completo" %><br />
    <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Fulanito De Tal' %>
	<br /> 
  </div>
  
  <div class="field">
	<center>
    <%= f.label :nivel, "Tipo de usuario" %><br />
    <%= f.label :nivel, "Profesor", :value => 2  %>
    <%= f.radio_button :nivel, 2 %>
    <%= f.label :nivel, "Estudiante", :value => 1 %>
    <%= f.radio_button :nivel, 1%>
	</center>
  </div>
  
  <div class="field">
    <%= f.label :password, "Contraseña" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
    <% end %><br />
    <!-- <%= f.password_field :password, autocomplete: "off" %> -->
	<%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Contraseña'%>
	<br /> 
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmar contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirmar contraseña' %>
	<br /> 
  </div>

  <div class="actions">
    <!-- <%= f.submit "Registrarse" %> -->
	<%= f.submit "Registrarse", class: 'btn btn-primary' %>
  </div>
<% end %>

<div class="panel-footer">
<%= render "devise/shared/links" %>
</div>
</div>


